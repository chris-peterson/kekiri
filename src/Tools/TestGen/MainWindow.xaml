<Window x:Class="Kekiri.TestGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kekiri ScenarioTest Generator" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Click="OnGenerateClassicClick">
                Generate Classic Scenario
            </Button>
            <Button Click="OnGenerateFluentClick">
                Generate Fluent Scenario
            </Button>
        </StackPanel>
        <TextBox x:Name="_textBox" TextWrapping="Wrap" AcceptsReturn="True" />
    </DockPanel>
</Window>
